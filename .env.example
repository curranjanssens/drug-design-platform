# Drug Design Platform - Environment Variables

# Anthropic API (required for Claude orchestration)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# IBM RXN for Chemistry API (optional, for retrosynthesis)
IBM_RXN_API_KEY=your_ibm_rxn_api_key_here

# EPO Open Patent Services (optional, for patent searching)
EPO_CONSUMER_KEY=your_epo_key_here
EPO_CONSUMER_SECRET=your_epo_secret_here

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/drugdesign

# Redis
REDIS_URL=redis://localhost:6379

# Optional: GPU Configuration
CUDA_VISIBLE_DEVICES=0
